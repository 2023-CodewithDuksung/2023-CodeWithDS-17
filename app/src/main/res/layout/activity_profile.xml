<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/o_profile_BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/o_chevron2"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="46dp"/>

    <TextView
        android:id="@+id/o_profile_title"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="138dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:text="회원정보 수정"
        android:textAppearance="@style/o_profile_1"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/o_profile_Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/o_ellipse"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="91dp"/>
    <View
        android:id="@+id/o_profile_changeImg"
        android:layout_width="65dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="132dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="121dp"
        android:background="@drawable/o_profile_rectangle1"
        />
    <TextView
        android:id="@+id/o_profile_changeImgTxt"
        android:layout_width="81dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="146dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="121dp"
        android:text="변경하기"
        android:textAppearance="@style/o_profile_2"
        android:lineSpacingExtra="8sp"
        android:gravity="center_vertical"
        />

    <View
        android:id="@+id/o_profile_nicknameBtn"
        android:layout_width="269dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="193dp"
        android:layout_centerVertical="true"
        android:background="@drawable/o_profile_rectangle2"
        />
    <TextView
        android:id="@+id/o_profile_nickname"
        android:layout_width="113dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="200dp"
        android:layout_centerVertical="true"
        android:text="닉네임"
        android:textAppearance="@style/o_profile_3"
        android:lineSpacingExtra="8sp"
        android:gravity="center_vertical"
        />

    <View
        android:id="@+id/o_profile_emailBtn"
        android:layout_width="269dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="252dp"
        android:layout_centerVertical="true"
        android:background="@drawable/o_profile_rectangle2"
        />
    <TextView
        android:id="@+id/o_profile_email"
        android:layout_width="113dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="259dp"
        android:layout_centerVertical="true"
        android:text="이메일"
        android:textAppearance="@style/o_profile_3"
        android:lineSpacingExtra="8sp"
        android:gravity="center_vertical"
        />

    <View
        android:id="@+id/o_profile_phonenumberBtn"
        android:layout_width="269dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="311dp"
        android:layout_centerVertical="true"
        android:background="@drawable/o_profile_rectangle2"
        />
    <TextView
        android:id="@+id/o_profile_phonenumber"
        android:layout_width="113dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="318dp"
        android:layout_centerVertical="true"
        android:text="전화번호"
        android:textAppearance="@style/o_profile_3"
        android:lineSpacingExtra="8sp"
        android:gravity="center_vertical"
        />

    <View
        android:id="@+id/o_profile_passwordBtn"
        android:layout_width="269dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="370dp"
        android:layout_centerVertical="true"
        android:background="@drawable/o_profile_rectangle2"
        />
    <TextView
        android:id="@+id/o_profile_password"
        android:layout_width="113dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="377dp"
        android:layout_centerVertical="true"
        android:text="비밀번호"
        android:textAppearance="@style/o_profile_3"
        android:lineSpacingExtra="8sp"
        android:gravity="center_vertical"
        />

    <View
        android:id="@+id/o_profile_majorBtn"
        android:layout_gravity="center_horizontal"
        android:layout_width="269dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="429dp"
        android:layout_centerVertical="true"
        android:background="@drawable/o_profile_rectangle2"
        />
    <TextView
        android:id="@+id/o_profile_major"
        android:layout_width="113dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="436dp"
        android:layout_centerVertical="true"
        android:text="1,2전공"
        android:textAppearance="@style/o_profile_3"
        android:lineSpacingExtra="8sp"
        android:gravity="center_vertical"
        />

    <View
        android:id="@+id/o_profile_saveBtn"
        android:layout_gravity="center_horizontal"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="517dp"
        android:background="@drawable/o_mypage_rectangle1"
        />
    <TextView
        android:id="@+id/o_profile_profileSave"
        android:layout_width="72dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="525dp"
        android:text="저장"
        android:textAppearance="@style/o_profile_4"
        android:lineSpacingExtra="3sp"
        android:gravity="center"
        />

</FrameLayout>