<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/o_settings_backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/o_Chevron2"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="46dp"
        />

    <TextView
        android:id="@+id/o_settings_title"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="166dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:text="설정"
        android:textAppearance="@style/o_settings_1"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/o_settings_onoff"
        android:layout_width="277dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="117dp"
        android:text="채팅창 알림"
        android:textAppearance="@style/o_settings_2"
        android:lineSpacingExtra="2sp"
        android:gravity="center_vertical"
        />

    <View
        android:id="@+id/o_settings_saveBtn"
        android:layout_gravity="center_horizontal"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="650dp"
        android:background="@drawable/o_mypage_rectangle1"
        />

    <TextView
        android:id="@+id/o_settings_save"
        android:layout_gravity="center_horizontal"
        android:layout_width="72dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="660dp"
        android:text="저장"
        android:textAppearance="@style/o_mypage_5"
        android:lineSpacingExtra="3sp"
        android:gravity="center"
        />

</FrameLayout>