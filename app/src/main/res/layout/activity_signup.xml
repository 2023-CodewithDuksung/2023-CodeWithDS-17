<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dj"
    android:layout_marginTop="-30dp"
    android:paddingHorizontal="30dp"
    tools:context=".SignupActivity"
    >

    <Button
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chevron"
        android:background="@drawable/tt"
        android:backgroundTint="#000000"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_marginTop="80dp"
        android:id="@+id/join"
        android:text="회원가입"
        android:gravity="center_vertical"
        android:layout_gravity="left|clip_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/o_mypageRectangle0"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="fill"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_custom_buttom"
        android:text="이름"
        android:layout_margin="5sp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/o_mypageRectangle1"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="fill"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_custom_buttom"
        android:text="비밀번호"
        android:layout_margin="5sp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/o_mypageRectangle"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="fill"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_custom_buttom"
        android:text="아이디"
        android:layout_margin="5sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/o_mypageRectangle3"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="fill"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_custom_buttom"
        android:text="이메일"
        android:layout_margin="5sp"
        android:textColor="#000000"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/calling"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="fill"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_custom_buttom"
            android:text="전화번호"
            android:layout_marginLeft="0dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:text="인증"
            android:backgroundTint="#5DB9B5"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/o_mypageRectangle2"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="fill"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_custom_buttom"
        android:text="1,2전공 입력"
        android:layout_margin="5sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅창 알림을 허용하시겠습니까?"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="10dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/allow"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#5DB9B5"
        android:text="가입하기"
        />






</LinearLayout>